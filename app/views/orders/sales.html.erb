<div class="center">
<h1 class="current-category" style="color:blue">My sales </h1>
  
</div>

<table class = "table table-striped table-bordered table-hover" width="200" height="60">
<tr>

<th class = "center">Image</th>
    <th class = "center">Product</th>
    <th class = "center">Price</th>
    <th class = "center, info">Customer</th>
    <th class = "center">Date Sold</th>
     <th class = "center">City</th>
     <th class = "center">Address</th>
    <th class = "center">Phone</th>
</tr>

<% @orders.each do |order| %>
 <tr>
      <td><%= image_tag order.product.image.url(:thumb) %></td>
      <td><%= order.product.name %></td>
      <td><%= number_to_currency(order.product.price)  %></td>
      <td ><%= order.buyer.name %></td>

      <td ><%= order.created_at.strftime("%B %-d, %Y") %></td>
        <td><%= order.city %></td>
          <td><%= order.address %></td>
            <td><%= order.phone %></td>
    
    
      </tr>
      <%end%>

    </table>

    <br>
  <% if admin_signed_in? %>
    <li> <%= link_to 'NEW PRODUCT', new_product_path, class: "btn btn-link" %></li>
  <%end%>
</div>
<% unless @orders.empty? %>

<nav>
  <ul class="pager">
    <li class="previous " <%= will_paginate @orders %> <span aria-hidden="true">&larr;
   
  </ul>
</nav>
<% end %>

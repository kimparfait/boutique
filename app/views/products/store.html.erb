<table class = "table table-striped table-bordered table-hover" width="200" height="60">
<tr>

<th class = "center">Image</th>
    <th class = "center">Name</th>
    <th class = "center">Description</th>
    <th class = "center, info">Price</th>
    <th class = "center">Action</th>
</tr>

<% @products.each do |product| %>
 <tr>
      <td><%= image_tag product.image.url(:thumb) %></td>
      <td><%= product.name %></td>
      <td><%= product.description %></td>
      <td ><%= number_to_currency(product.price) %></td>
      <td>
      <div class="btn-group">
           <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
             Action <span class="caret"></span>
           </button>
           <ul class="dropdown-menu" role="menu">
        <li><%= link_to "view", product, class: "btn btn-link" %></li>
        <li><%= link_to 'Edit', edit_product_path(product), class: "btn btn-link" %></li>
        <li><%= link_to 'Destroy',product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></li>
        </ul>
         </div>
      </td>
      </tr>
      <%end%>

    </table>

    <br>
  <% if admin_signed_in? %>
    <li> <%= link_to 'NEW PRODUCT', new_product_path, class: "btn btn-link" %></li>
  <%end%>
</div>

<% unless @products.empty? %>

<nav>
  <ul class="pager">
    <li class="previous " <%= will_paginate @products %> <span aria-hidden="true">&larr;
   
  </ul>
</nav>
<% end %>


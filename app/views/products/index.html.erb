<div class="row">
 <% @products.each do |product| %>
  <div class=" col-md-3">
    <div class="thumbnail">
     <%= link_to image_tag(product.image.url), product %>
     
      <div class="caption">
        <h3><%= product.name %></h3>
        <p><%= number_to_currency(product.price) %></p>
        <p> <%= product.description %></p>
        
      </div>
    </div>
  </div>
   <% end %>
</div>



<br>

<%= link_to 'New Product', new_product_path %>
